</head>

  <body>
    <nav class="light">
      <!-- START CONTAINER -->	
      <div class="container clearfix">			
        <div class="four columns">			
          <!-- START LOGO -->	
          <div class="logo large">
            <a href="/"><img src="images/logo.png" title="logo" alt="Logo"/></a>
          </div>
          <!-- END LOGO -->			
        </div><!-- END FOUR COLUMNS -->   
          
        <div class="twelve columns">            		
          <!-- START NAVIGATION MENU ITEMS -->
          <ul class="main-menu large" id="privacy_nav">
            <li><a href="/">Home</a></li>                
            <li><a href="/signup">Sign Up</a></li>
	    <li><a href="/signup">Sign In</a></li>
	    <li><a href="/competitions">Competitions</a></li>
            <li><a href="http://blog.3dthon.com" target="_blank">Blog</a></li> 
	    <li><a href="/#contact">Contact</a></li>
	  </ul>
          <!-- END NAVIGATION MENU ITEMS -->				

        </div><!-- END TWELVE COLUMNS -->	
      </div><!-- END CONTAINER -->	
    </nav>

    <div class="page">

      <div class="container clearfix">
      
	<div class="row">

	  <div class="eight columns">	
	  
	    <div class="fullwidth grey">
	    
	      <h1 class="aligncenter"> Sign Up </h1>
	    
	      <form  action="local_signup" method="post">  
		
		<div id="signup_form">
		  <input type="email" id="signup-email" name="signup_email" placeholder="Email (required)" >
		  <input type="password" id="signup-password1" name="signup_password1" placeholder="Password (required)">
		  <input type="password" id="signup-password2" name="signup_password2" placeholder="Retype password">
		  <input type="text" id="signup-name" name="signup_name" placeholder="Name (required)">
		  <button type="submit" class="btn btn-primary btn-large"> Sign Up </button>
		</div> 
	      
	      </form>

	      <div class="aligncenter">
		<p class="signup-flash"><%= signup_flash_msg %></p>
    	      </div>

	    </div>
	  </div>
	
	  <div class="eight columns">
	  
	    <div class="fullwidth grey">
	    
	      <h1 class="aligncenter"> Member? </h1>
	      <h2 class="aligncenter"> Sign In </h2>
	      
	      <form action="/local_signin" method="post">
		
		<div id="signin_form">
		  <input type="email" id="signin-email" name="signin_email" placeholder="Email (required)">
		  <input type="password" id="signin-password" name="signin_password" placeholder="Password (required)" >
		  <button type="submit" class="btn btn-primary btn-large"> Sign In </button>
		</div>

	      </form>

	      <div class="pagination-centered">
		<p class="signup-flash"><%= flash_msg %></p>
    	      </div>

	    </div>
	  </div>
	</div>

      </div>
    </div>

      <hr class="featurette-divider">

      <div class="container">

	<h2 class="aligncenter">
	  Or sign-up/sign-in with your existing accounts
	</h2>
	
	<div class="row">
	  <div class="five columns">
	    <a href="/auth/facebook">
	      <img src="https://dl.dropboxusercontent.com/u/69791784/3Dthon/assets/img/facebook-login.png">
	    </a>
	  </div>
	  <div class="five columns">
	    <a href="/auth/twitter">
	      <img src="https://dl.dropboxusercontent.com/u/69791784/3Dthon/assets/img/twitter-login.png">
	    </a>
	  </div>
	  <div class="five columns">
	    <a href="/auth/google">
	      <img src="https://dl.dropboxusercontent.com/u/69791784/3Dthon/assets/img/google-login.png">
	    </a>
	  </div>
	</div>
      </div>

    </div>

