<head>

	<!-- META DATA -->
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<meta charset="UTF-8">
	<title>3Dthon: Competitions</title>
    <meta name="description" content="3D printing competition"/>
    <meta name="keywords" content="3D printing, 3D printer"/>
    <meta name="author" content="RamSud Labs"/>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- USUAL BOOTSTRAP -->
    <link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/bootstrap.css" type="text/css">
	<!-- JARVIS THEME STYLESHEETS -->
     
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/skeleton.css" type="text/css">
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/reset.css" type="text/css">    
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/style.css" type="text/css">
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/social.css" type="text/css">             
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/flexslider.css" type="text/css">	
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/prettyPhoto.css" type="text/css" media="screen"/><!-- PrettyPhoto -->	
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/font-awesome.css" type="text/css"/><!-- PrettyPhoto -->    
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/shortcodes.css" type="text/css"/> 	
	<link rel="stylesheet" href="https://s3-us-west-1.amazonaws.com/3dthon/css/media.css"><!-- Media Queries -->

    
    
    <link id="layout_color" href="https://s3-us-west-1.amazonaws.com/3dthon/css/light.css" rel="stylesheet" type="text/css"/>  
    <link id="primary_color_scheme" href="https://s3-us-west-1.amazonaws.com/3dthon/css/colors/blue.css" rel="stylesheet" type="text/css"/>      

    <style>

      .local-blog-background {
         background: url("/images/blog/blog1.jpg");
      }
      
      .local-blog-image {
         display: block;
         margin-left: auto;
         margin-right: auto;
      }

      .local-border-bottom {
          border-bottom: 3px solid #666;
          margin-bottom: 20px;
          padding-bottom: 40px;
          position: relative;
      }

      .local-bigfont {
          font-size: 200%;
      }

    </style>

  </head>
  
  <body class="multipage">
    <nav class="light">
      <!-- START CONTAINER -->	
      <div class="container clearfix">			
        <div class="four columns">			
          <!-- START LOGO -->	
          <div class="logo large">
            <a href="/"><img src="/images/logo.png" title="logo" alt="Logo"/></a>
          </div>
          <!-- END LOGO -->			
        </div><!-- END FOUR COLUMNS -->   
          
        <div class="twelve columns">            		
          <!-- START NAVIGATION MENU ITEMS -->
          <ul class="main-menu large" id="nav">
            <li><a href="/competitions">Home</a></li>                
            <li><a href="/competitions">Competitions</a></li>
            <li><a href="/newContest">Host a Contest</a></li>
            <li><a href="http://blog.3dthon.com" target="_blank">Blog</a></li> 
	    <li class="dropdown">
	      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
		<%= user.name %> <span class="caret"></span>
	      </a>
	      <ul class="dropdown-menu">
		<li><a href="/profile">Profile</a></li>
		<li><a href="/signout">Sign Out</a></li>
	      </ul>
	    </li>
	    <li><img src="<%= user.imageurl %>" alt="pic" class="social-icon" /></div></li>
	  </ul>
          <!-- END NAVIGATION MENU ITEMS -->				

        </div><!-- END TWELVE COLUMNS -->	
      </div><!-- END CONTAINER -->	
    </nav>
    
    <div class="page-wrap">
    	<div class="page multipage">
      	  
	  <div class="container">
            <div class="row">
              <div class="sixteen columns">
            	<div class="title">
              	  <h1><%= competition.title %></h1>
		</div>
              </div>
            </div>
          </div>
        <!-- END OF CONTAINER -->
        
	<!-- START CONTAINER -->
	<div class="container">
	  
	  <!-- START TWELVE COLUMNS -->
          <div class="sixteen columns">

	    <!-- START POST -->
            <div class="post">
              
	      <!-- START POST MEDIA -->
	      <div class="post-media">

                   <div class="flexslider">
                     <ul class="slides">
                            <li>
			      <div class="local-blog-background">
                                <img src="<%= competition.images[0] %>" class="local-blog-image" alt="portfolio slider" />
                                <p class="flex-caption-details"><%= competition.title %></p>
			      </div>
                            </li>
			    
                     </ul>
                   </div>
              </div>
	      <!-- END POST MEDIA -->
	      
	      <!-- START POST CONTENT -->
	      <div class="post-content local-border-bottom">
		
		<div class="local-bigfont">
		  <%- competition.description %>
		</div>

	      </div>
	      <!-- END POST CONTENT --> 

	      <div class="comments local-border-bottom">
		<h3 class="heading">Reward</h3>
		<div class="local-bigfont">
		  <%= competition.reward %>
		</div>
	      </div>

	      <div class="comments local-border-bottom">
		<h3 class="heading">Ends At</h3>
		<div class="local-bigfont">
		  <%= competition.endTime %>
		</div>

	      </div>

	    </div>
	    <!-- END POST -->
	    
	    <div class="title">
              <a href="/competitions"><h2> &lt;&lt;Back </h2></a>
	    </div>

	  </div> 
	  <!-- END TWELVE COLUMNS -->
	  
	</div>
	<!-- END CONTAINER -->
	</div>
    </div>
    
    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>  
		<script type="text/javascript" src="/js/jquery.queryloader2.js"></script>        
		<script type="text/javascript" src="/js/modernizr-2.6.2.min.js"></script>  
		<script type="text/javascript" src="/js/jquery.fitvids.js"></script>  
		<script type="text/javascript" src="/js/jquery.appear.js"></script>  
		<script type="text/javascript" src="/js/jquery.slabtext.min.js"></script>   
		<script type="text/javascript" src="/js/jquery.fittext.js"></script>   
		<script type="text/javascript" src="/js/jquery.easing.min.js"></script>
		<script type="text/javascript" src="/js/jquery.parallax-1.1.3.js"></script>
		<script type="text/javascript" src="/js/jquery.prettyPhoto.js"></script>
		<script type="text/javascript" src="/js/jquery.sticky.js"></script>
		<script type="text/javascript" src="/js/selectnav.min.js"></script>    
		<script type="text/javascript" src="/js/SmoothScroll.js"></script>   
		<script type="text/javascript" src="/js/jquery.flexslider-min.js"></script>    
		<script type="text/javascript" src="/js/isotope.js"></script>    
		<script type="text/javascript" src="/js/bootstrap.js"></script>   
		<script type="text/javascript" src="/js/bootstrap-modal.js"></script>   
		<script type="text/javascript" src="/js/shortcodes.js"></script>     
		<script type="text/javascript" src="/js/scripts.js"></script>          

 	</body>
</html>
